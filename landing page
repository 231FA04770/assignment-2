      alt: "Classic Literature Pride and Prejudice"
    },
    {
      title: "Ergonomic Office Chair",
      price: "‚Çπ5,499",
      priceNumber: 5499,
      img: "https://images-na.ssl-images-amazon.com/images/I/61dv2Rp-YuL._AC_SL1500_.jpg",
      alt: "Ergonomic Office Chair"
    },
    {
      title: "Professional Size Football",
      price: "‚Çπ699",
      priceNumber: 699,
      img: "https://images-na.ssl-images-amazon.com/images/I/81uT+7mOfjL._AC_SL1500_.jpg",
      alt: "Professional Size Football"
    },
  ];

  // Elements references
  const searchInput = document.getElementById('searchInput');
  const suggestionsList = document.getElementById('suggestions');
  const floatingCart = document.getElementById('floating-cart');
  const cartCount = document.getElementById('cart-count');
  const quickViewModal = document.getElementById('quickViewModal');
  const modalTitle = document.getElementById('modalTitle');
  const modalPrice = document.getElementById('modalPrice');
  const modalImage = document.getElementById('modalImage');
  const addToCartBtn = document.getElementById('addToCartBtn');
  const closeModalBtn = quickViewModal.querySelector('.close-btn');
  const darkModeToggleBtn = document.createElement('button');

  let cartItems = [];
  let currentQuickViewIndex = null;

  // Search suggestions data - combining products & categories for demo
  const categories = [
    'Electronics',
    'Fashion',
    'Home & Furniture',
    'Sports & Fitness',
    'Books',
    'Toys & Games'
  ];

  const searchTerms = [...categories, ...products.map(p => p.title)];

  // Show/hide suggestions when typing
  searchInput.addEventListener('input', onSearchInput);

  function onSearchInput() {
    const query = searchInput.value.trim().toLowerCase();
    if (!query) {
      suggestionsList.innerHTML = '';
      suggestionsList.style.display = 'none';
      searchInput.setAttribute('aria-expanded', 'false');
      return;
    }

    // filter matching suggestions
    const filtered = searchTerms.filter(term => term.toLowerCase().includes(query)).slice(0, 5);

    if (filtered.length === 0) {
      suggestionsList.innerHTML = '';
      suggestionsList.style.display = 'none';
      searchInput.setAttribute('aria-expanded', 'false');
      return;
    }

    // build suggestion list
    suggestionsList.innerHTML = filtered.map(term =>
      `<li role="option" tabindex="0">${term}</li>`
    ).join('');
    suggestionsList.style.display = 'block';
    searchInput.setAttribute('aria-expanded', 'true');

    // Suggestion keyboard & click support
    const items = suggestionsList.querySelectorAll('li');
    items.forEach((item, idx) => {
      item.addEventListener('click', () => {
        searchInput.value = item.textContent;
        suggestionsList.innerHTML = '';
        suggestionsList.style.display = 'none';
        searchInput.setAttribute('aria-expanded', 'false');
      });
      item.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') {
          e.preventDefault();
          searchInput.value = item.textContent;
          suggestionsList.innerHTML = '';
          suggestionsList.style.display = 'none';
          searchInput.setAttribute('aria-expanded', 'false');
          searchInput.focus();
        }
      });
    });
  }

  // Hide suggestions if clicking outside
  document.addEventListener('click', (e) => {
    if (!searchInput.contains(e.target) && !suggestionsList.contains(e.target)) {
      suggestionsList.style.display = 'none';
      searchInput.setAttribute('aria-expanded', 'false');
    }
  });

  // Search submit action simulation
  document.querySelector('.search-bar').addEventListener('submit', (e) => {
    e.preventDefault();
    alert(`Searching for "${searchInput.value.trim()}" (demo)`);
    searchInput.value = '';
    suggestionsList.innerHTML = '';
    suggestionsList.style.display = 'none';
    searchInput.setAttribute('aria-expanded', 'false');
  });

  // Quick View Modal logic
  document.querySelectorAll('.product-card').forEach((card, idx) => {
    const quickBtn = card.querySelector('.quick-view-btn');
    quickBtn.addEventListener('click', () => openQuickView(idx));
  });

  function openQuickView(idx) {
    currentQuickViewIndex = idx;
    const product = products[idx];
    modalTitle.textContent = product.title;
    modalPrice.textContent = product.price;
    modalImage.src = product.img;
    modalImage.alt = product.alt;
    quickViewModal.classList.add('active');
    addToCartBtn.focus();
  }
  closeModalBtn.addEventListener('click', closeQuickView);
  quickViewModal.addEventListener('click', e => {
    if (e.target === quickViewModal) closeQuickView();
  });
  document.addEventListener('keydown', e => {
    if(e.key === "Escape" && quickViewModal.classList.contains('active')) {
      closeQuickView();
    }
  });
  function closeQuickView() {
    quickViewModal.classList.remove('active');
  }

  // Add to Cart logic
  addToCartBtn.addEventListener('click', () => {
    if (currentQuickViewIndex === null) return;
    const product = products[currentQuickViewIndex];
    cartItems.push(product);
    updateCartCount();
    alert(`Added "${product.title}" to cart!`);
  });

  // Update cart count in floating icon
  function updateCartCount() {
    cartCount.textContent = cartItems.length;
    floatingCart.setAttribute('aria-label', `${cartItems.length} item${cartItems.length === 1 ? '' : 's'} in cart`);
  }

  // Floating cart click handler
  floatingCart.addEventListener('click', () => {
    if (cartItems.length === 0) {
      alert('Cart is empty.');
    } else {
      alert(`You have ${cartItems.length} item${cartItems.length === 1 ? '' : 's'} in your cart.`);
    }
  });
  floatingCart.addEventListener('keydown', e => {
    if (e.key === 'Enter' || e.key === ' ') {
      e.preventDefault();
      floatingCart.click();
    }
  });

  // Dark mode toggle button
  darkModeToggleBtn.setAttribute('aria-label', 'Toggle dark mode');
  darkModeToggleBtn.setAttribute('role', 'button');
  darkModeToggleBtn.setAttribute('tabindex', '0');
  darkModeToggleBtn.textContent = 'üåô';
  darkModeToggleBtn.title = 'Toggle Dark Mode';
  darkModeToggleBtn.style.cssText = `
    position: fixed;
    top: 80px;
    right: 20px;
    background: var(--primary-color);
    color: white;
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    font-size: 1.25rem;
    cursor: pointer;
    z-index: 1004;
    user-select: none;
    box-shadow: 0 3px 10px var(--shadow);
  `;
  document.body.appendChild(darkModeToggleBtn);

  darkModeToggleBtn.addEventListener('click', toggleDarkMode);
  darkModeToggleBtn.addEventListener('keydown', e => {
    if (e.key === 'Enter' || e.key === ' ') {
      e.preventDefault();
      toggleDarkMode();
    }
  });

  // Load saved mode preference
  if (localStorage.getItem('darkMode') === 'true') {
    document.body.classList.add('dark');
    darkModeToggleBtn.textContent = '‚òÄÔ∏è';
  }

  function toggleDarkMode() {
    document.body.classList.toggle('dark');
    if (document.body.classList.contains('dark')) {
      darkModeToggleBtn.textContent = '‚òÄÔ∏è';
      localStorage.setItem('darkMode', 'true');
    } else {
      darkModeToggleBtn.textContent = 'üåô';
      localStorage.setItem('darkMode', 'false');
    }
  }

</script>

<!-- Visually hidden class for accessibility -->
<style>
  .visually-hidden {
    position: absolute !important;
    height: 1px; width: 1px; 
    overflow: hidden;
    clip: rect(1px 1px 1px 1px);
    clip-path: inset(50%);
    white-space: nowrap; 
  }
</style>

